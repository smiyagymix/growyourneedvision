# Environment Variables - Production Configuration Template
# Copy to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

# ============================================
# POCKETBASE CONFIGURATION
# ============================================
VITE_POCKETBASE_URL=https://api.yourdomain.com
POCKETBASE_ADMIN_EMAIL=admin@yourdomain.com
POCKETBASE_ADMIN_PASSWORD=REPLACE_WITH_SECURE_PASSWORD_MIN_16_CHARS

# ============================================
# DATABASE CREDENTIALS (PostgreSQL for Medusa)
# ============================================
POSTGRES_USER=medusa_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD_MIN_16_CHARS
POSTGRES_DB=medusa_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# APPLICATION SECRETS
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_LONG_RANDOM_STRING_MIN_32_CHARS
COOKIE_SECRET=REPLACE_WITH_LONG_RANDOM_STRING_MIN_32_CHARS
ENCRYPTION_KEY=REPLACE_WITH_32_CHAR_HEX_STRING

# ============================================
# STORAGE CONFIGURATION (MinIO/S3)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=REPLACE_WITH_SECURE_PASSWORD_MIN_16_CHARS
MINIO_ENDPOINT=minio:9000
MINIO_USE_SSL=true

# ============================================
# AI SERVICE CONFIGURATION
# ============================================
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENROUTER_API_KEY=YOUR_OPENROUTER_API_KEY
GROQ_API_KEY=YOUR_GROQ_API_KEY
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY
HUGGINGFACE_API_KEY=YOUR_HUGGINGFACE_API_KEY

# AI Service URL
VITE_AI_SERVICE_URL=https://ai.yourdomain.com

# ============================================
# PAYMENT GATEWAY (Stripe)
# ============================================
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
VITE_STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET

# ============================================
# EMAIL SERVICE (SMTP)
# ============================================
VITE_EMAIL_PROVIDER=smtp
VITE_SMTP_HOST=YOUR_SMTP_HOST
VITE_SMTP_PORT=465
VITE_SMTP_USERNAME=YOUR_SMTP_USERNAME
VITE_SMTP_PASSWORD=YOUR_SMTP_PASSWORD

# ============================================
# MONITORING & LOGGING (Sentry)
# ============================================
VITE_SENTRY_DSN=https://YOUR_KEY@o123456.ingest.sentry.io/123456
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN
SENTRY_ORG=your-org
SENTRY_PROJECT=grow-your-need

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS_OWNER=100
RATE_LIMIT_MAX_REQUESTS_USER=50
RATE_LIMIT_MAX_REQUESTS_PUBLIC=20

# Session & Authentication
SESSION_TIMEOUT_MINUTES=60
MFA_ISSUER=Grow Your Need
MFA_REQUIRED_FOR_OWNER=true

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# DEPLOYMENT URLS
# ============================================
NODE_ENV=production
VITE_SMTP_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# AI SERVICES
# =============================================================================
AI_PROVIDER=openai
VITE_OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
VITE_SENTRY_DSN=https://your-sentry-dsn

# Enable analytics
VITE_ANALYTICS_ENABLED=true
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================================================
# PAYMENT PROCESSING (STRIPE)
# =============================================================================
VITE_STRIPE_PUBLISHABLE_KEY=your_publishable_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_AI=true
VITE_ENABLE_MEDIA_UPLOADS=true
VITE_ENABLE_GAMIFICATION=true
